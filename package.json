{
  "name": "postcss-smart-asset",
  "version": "3.0.0",
  "description": "PostCSS plugin to rebase or inline on url().",
  "keywords": [
    "css",
    "postcss",
    "postcss-plugin",
    "url",
    "rebase",
    "inline",
    "base64",
    "assets"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "license": "MIT",
  "repository": "https://github.com/sebastian-software/postcss-smart-asset.git",
  "author": {
    "name": "Sebastian Software",
    "email": "s.werner@sebastian-software.de",
    "url": "https://www.sebastian-software.de"
  },
  "main": "lib/index.cjs.js",
  "module": "lib/index.esm.js",
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.js": "eslint --quiet"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "dependencies": {
    "asset-hash": "^4.0.4",
    "core-js": "^3.20.3",
    "mime": "^3.0.0",
    "minimatch": "^3.0.4"
  },
  "peerDependencies": {
    "postcss": "^8.4.5"
  },
  "devDependencies": {
    "@babel/core": "^7.16.10",
    "@babel/plugin-transform-runtime": "^7.16.10",
    "@babel/preset-env": "^7.16.10",
    "@effective/eslint-config": "^4.0.1",
    "@effective/prettier": "^4.3.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^27.4.6",
    "eslint": "^8.7.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.2.1",
    "postcss": "^8.4.5",
    "postcss-import": "^14.0.2",
    "preppy": "^11.0.1",
    "prettier": "^2.5.1",
    "release-it": "^14.12.3",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.4"
  },
  "scripts": {
    "lint": "eslint '**/*.js'",
    "format": "effective-prettier '**/*.{js,ts,json,md}'",
    "release": "release-it --ci patch",
    "release:minor": "release-it --ci minor",
    "release:major": "release-it --ci major",
    "test": "jest --coverage",
    "prepare": "rimraf lib && preppy"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
